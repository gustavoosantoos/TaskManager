<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "TaskManager.WebApplication")</title>

    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="app sidebar-mini rtl">
    @await Html.PartialAsync("_MenuSuperiorPartial")
    @await Html.PartialAsync("_MenuLateralPartial")
    <main class="app-content">
        @RenderBody()
        <hr />
        @await Html.PartialAsync("_FooterPartial")
    </main>

    <!-- Essential javascripts for application to work-->
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/js/plugins/pace.min.js"></script>
    <!-- Page specific javascripts-->
    <script type="text/javascript" src="~/js/plugins/chart.js"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <link href="~/css/SweetAlertStyles.css" rel="stylesheet" />
    <script src="~/js/bootstrap-notify.min.js"></script>
    <script>
        @Html.Raw(TempData["StartupScript"])
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
