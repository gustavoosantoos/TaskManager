@model TaskManager.Domain.Models.Entities.Curso
@{
    ViewData["Title"] = "Adicionar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-graduation-cap"></i> Adicionar Curso</h1>
        <p>Está é a area para você cadastrar os seus cursos ou edita-los.</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Informe os dados do curso a ser cadastrado.</h3>
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Adicionar" asp-controller="Cursos" method="post" class="row">
                        <div class="form-group col-md-4">
                            <label class="control-label" asp-for="Nome"></label>
                            <input class="form-control" type="text" placeholder="Informe o nome do curso" asp-for="Nome">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 align-self-end">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-floppy"></i>Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


